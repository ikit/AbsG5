{
    "name": "absg-core",
    "version": "5.2.0",
    "description": "API principale de l'application Absolument G.",
    "repository": {
        "type": "git",
        "url": "https://github.com/ikit/AbsG5.git"
    },
    "apidoc": {
        "title": "ABSG5 API",
        "description": "Documentation de l'API"
    },
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=10.0.0"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "husky": "^9.0.0",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "async-mutex": "^0.5.0",
        "bcrypt": "^5.0.1",
        "bestzip": "^2.2.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "cross-env": "^7.0.3",
        "date-fns": "^2.28.0",
        "express": "^4.17.2",
        "express-fileupload": "^1.3.1",
        "jimp": "^0.22.12",
        "jsonwebtoken": "^8.5.1",
        "morgan": "^1.10.0",
        "nodemailer": "^6.9.9",
        "pg": "^8.12.0",
        "reflect-metadata": "^0.2.1",
        "routing-controllers": "^0.10.4",
        "typeorm": "^0.3.20",
        "url-join": "^5.0.0",
        "winston": "^3.11.0",
        "ws": "^8.18.0"
    },
    "scripts": {
        "dev": "npm run start:dev",
        "start": "cross-env NODE_ENV=production node build/api.js",
        "start:dev": "cross-env NODE_ENV=development ts-node-dev src/api.ts",
        "start:prod": "pm2 start ./ecosystem.config.js --env production",
        "prebuild": "rimraf build",
        "build": "tsc",
        "lint": "./node_modules/.bin/eslint --fix \"src/**/*.ts\"",
        "typeorm": "typeorm-ts-node-commonjs",
        "migration:generate": "npm run typeorm -- migration:generate",
        "migration:run": "npm run typeorm -- migration:run",
        "migration:revert": "npm run typeorm -- migration:revert",
        "zip": "cd build/ && bestzip ../diallog-api.zip *",
        "package": "npm run build && npm run zip",
        "release": "npx standard-version"
    },
    "lint-staged": {
        "*.{js,ts}": [
            "npm run lint",
            "git add"
        ]
    },
    "prettier": {
        "printWidth": 120
    }
}
