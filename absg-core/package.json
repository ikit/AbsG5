{
    "name": "absg-core",
    "version": "5.2.0",
    "description": "API principale de l'application Absolument G.",
    "repository": {
        "type": "git",
        "url": "https://github.com/ikit/AbsG5.git"
    },
    "apidoc": {
        "title": "ABSG5 API",
        "description": "Documentation de l'API"
    },
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=10.0.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cookie-parser": "^1.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/morgan": "^1.9.9",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.19.25",
        "@types/supertest": "^6.0.3",
        "@types/ws": "^8.5.10",
        "@vitest/ui": "^4.0.14",
        "husky": "^9.0.0",
        "supertest": "^7.1.4",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3",
        "vitest": "^4.0.14"
    },
    "dependencies": {
        "async-mutex": "^0.5.0",
        "bcrypt": "^5.1.1",
        "bestzip": "^2.2.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "date-fns": "^3.0.0",
        "express": "^4.19.2",
        "express-fileupload": "^1.5.0",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0",
        "jimp": "^0.22.12",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "multer": "^2.0.2",
        "nodemailer": "^6.9.9",
        "pg": "^8.12.0",
        "reflect-metadata": "^0.2.1",
        "routing-controllers": "^0.11.3",
        "typeorm": "^0.3.20",
        "url-join": "^5.0.0",
        "winston": "^3.11.0",
        "ws": "^8.18.0"
    },
    "scripts": {
        "dev": "npm run start:dev",
        "start": "cross-env NODE_ENV=production node build/api.js",
        "start:dev": "cross-env NODE_ENV=development ts-node-dev src/api.ts",
        "start:prod": "pm2 start ./ecosystem.config.js --env production",
        "prebuild": "rimraf build",
        "build": "tsc",
        "lint": "./node_modules/.bin/eslint --fix \"src/**/*.ts\"",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "typeorm": "typeorm-ts-node-commonjs",
        "migration:generate": "npm run typeorm -- migration:generate",
        "migration:run": "npm run typeorm -- migration:run",
        "migration:revert": "npm run typeorm -- migration:revert",
        "zip": "cd build/ && bestzip ../diallog-api.zip *",
        "package": "npm run build && npm run zip",
        "release": "npx standard-version"
    },
    "lint-staged": {
        "*.{js,ts}": [
            "npm run lint",
            "git add"
        ]
    },
    "prettier": {
        "printWidth": 120
    }
}
