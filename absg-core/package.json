{
    "name": "absg-core",
    "version": "5.2.0",
    "description": "API principale de l'application Absolument G.",
    "repository": {
        "type": "git",
        "url": "https://github.com/ikit/AbsG5.git"
    },
    "apidoc": {
        "title": "ABSG5 API",
        "description": "Documentation de l'API"
    },
    "devDependencies": {
        "@panz3r/apidoc-postman": "^2.1.0",
        "@types/node": "^8.10.64",
        "@types/node-cron": "^2.0.5",
        "@typescript-eslint/eslint-plugin": "^2.34.0",
        "@typescript-eslint/parser": "^2.34.0",
        "apidoc": "^0.17.7",
        "bestzip": "^2.2.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^6.12.0",
        "eslint-plugin-prettier": "^3.4.1",
        "git-branch-is": "^4.0.0",
        "husky": "^3.0.0",
        "lint-staged": "^12.3.3",
        "prettier": "^1.18.2",
        "sass": "~1.32.12",
        "ts-node": "3.3.0",
        "ts-node-dev": "^1.1.8",
        "tslint": "^5.20.0",
        "typescript": "3.3.3333"
    },
    "dependencies": {
        "async-mutex": "^0.2.6",
        "axios": "^0.21.4",
        "bcrypt": "^5.0.1",
        "body-parser": "^1.19.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "class-validator-jsonschema": "^1.3.0",
        "cross-env": "^5.2.1",
        "date-fns": "^1.30.1",
        "dotenv": "^8.6.0",
        "express": "^4.17.2",
        "express-fileupload": "^1.3.1",
        "jimp": "^0.16.1",
        "jsonwebtoken": "^8.5.1",
        "lodash.sortby": "^4.7.0",
        "md5": "^2.3.0",
        "morgan": "^1.10.0",
        "multer": "^1.4.4",
        "node-cron": "^2.0.3",
        "nodemailer": "^6.7.2",
        "pg": "^7.18.2",
        "promise-retry": "^1.1.1",
        "reflect-metadata": "^0.1.10",
        "rimraf": "^2.6.3",
        "routing-controllers": "^0.9.0",
        "routing-controllers-openapi": "^1.8.1",
        "swagger-ui-express": "^4.3.0",
        "typedi": "^0.8.0",
        "typeorm": "^0.2.41",
        "url-join": "^4.0.1",
        "winston": "^3.5.1",
        "winston-daily-rotate-file": "^3.9.0",
        "ws": "^7.5.6"
    },
    "scripts": {
        "dev": "npm run start:dev",
        "start": "cross-env NODE_ENV=production node build/api.js",
        "start:dev": "cross-env NODE_ENV=development ts-node-dev src/api.ts",
        "start:prod": "pm2 start ./ecosystem.config.js --env production",
        "prebuild": "rimraf build",
        "build": "tsc",
        "lint": "./node_modules/.bin/eslint --fix \"src/**/*.ts\"",
        "doc:apidoc": "./node_modules/.bin/apidoc -i src/controllers/ -o apidoc/",
        "doc:postman": "./node_modules/.bin/apidoc-postman -i src/controllers/ -o apidoc/",
        "doc:generate": "npm run doc:postman && npm run doc:apidoc",
        "typeorm": "ts-node ./node_modules/typeorm/cli.js",
        "zip": "cd build/ && bestzip ../diallog-api.zip * .env",
        "package": "npm run build && npm run doc:generate && npm run zip",
        "release": "npx standard-version"
    },
    "lint-staged": {
        "*.{js,ts}": [
            "npm run lint",
            "git add"
        ]
    },
    "prettier": {
        "printWidth": 120
    }
}
