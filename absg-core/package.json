{
    "name": "absg-core",
    "version": "5.2.0",
    "description": "API principale de l'application Absolument G.",
    "repository": {
        "type": "git",
        "url": "https://github.com/ikit/AbsG5.git"
    },
    "apidoc": {
        "title": "ABSG5 API",
        "description": "Documentation de l'API"
    },
    "devDependencies": {
        "@types/node": "^17.0.14",
        "husky": "^7.0.4",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "async-mutex": "^0.3.2",
        "bcrypt": "^5.0.1",
        "bestzip": "^2.2.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "cross-env": "^7.0.3",
        "date-fns": "^2.28.0",
        "express": "^4.17.2",
        "express-fileupload": "^1.3.1",
        "jimp": "^0.16.1",
        "jsonwebtoken": "^8.5.1",
        "morgan": "^1.10.0",
        "nodemailer": "^6.7.2",
        "pg": "^8.7.3",
        "routing-controllers": "^0.9.0",
        "typeorm": "^0.2.41",
        "url-join": "^4.0.1",
        "winston": "^3.5.1",
        "ws": "^8.4.2"
    },
    "scripts": {
        "dev": "npm run start:dev",
        "start": "cross-env NODE_ENV=production node build/api.js",
        "start:dev": "cross-env NODE_ENV=development ts-node-dev src/api.ts",
        "start:prod": "pm2 start ./ecosystem.config.js --env production",
        "prebuild": "rimraf build",
        "build": "tsc",
        "lint": "./node_modules/.bin/eslint --fix \"src/**/*.ts\"",
        "typeorm": "ts-node ./node_modules/typeorm/cli.js",
        "zip": "cd build/ && bestzip ../diallog-api.zip *",
        "package": "npm run build && npm run zip",
        "release": "npx standard-version"
    },
    "lint-staged": {
        "*.{js,ts}": [
            "npm run lint",
            "git add"
        ]
    },
    "prettier": {
        "printWidth": 120
    }
}
